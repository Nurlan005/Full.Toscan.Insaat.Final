@using Toscan_Insaat_Final.Areas.Admin.Dtos.ProjectDtos;
@model ProjectUpdateDto

@{
    ViewData["Title"] = "Update";
}


<form asp-asp-controller="Service" asp-action="Update" asp-asp-area="Admin" method="post" enctype="multipart/form-data">

    <input type="hidden" value="@Model.ProjectId" name="ProjectId" />

    <div class="form-group">
        <label asp-for="@Model.Name">Name</label>
        <input class="form-control" asp-for="@Model.Name" class="form-control">
        <span asp-asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <input class="form-control" asp-for="@Model.Description" class="form-control">
        <span asp-asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Description">Project Current Image</label>
        <img src="~/images/projects/@Model.ProjectImageUrl" style="width:100px; height:100px;" />
    </div>

    <div>
        <label asp-for="@Model.ProjectImage">Project New Image</label>
        <input id="ImageUrl" asp-for="@Model.ProjectImage" class="form-control" type="file" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.ProjectStatus">Status</label>
        <input class="form-control" asp-for="@Model.ProjectStatus" placeholder="status">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>