@using Toscan_Insaat_Final.Areas.Admin.Dtos.SliderDtos;
@model SliderUpdateDto

@{
    ViewData["Title"] = "Update";
}


<form asp-asp-controller="Slider" asp-action="Update" asp-asp-area="Admin" method="post" enctype="multipart/form-data">

    <input type="hidden" value="@Model.SliderId" name="SliderId" />

    <div class="form-group">
        <label asp-for="@Model.Title">Title</label>
        <input class="form-control" asp-for="@Model.Title" class="form-control">
        <span asp-asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.SliderImageUrl">Slider Current Image</label>
        <img src="~/images/sliders/@Model.SliderImageUrl" style="width:100px; height:100px;" />
    </div>

    <div>
        <label asp-for="@Model.SliderImage">Slider New Image</label>
        <input id="ImageUrl" asp-for="@Model.SliderImage" class="form-control" type="file" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.SliderStatus">Status</label>
        <input class="form-control" asp-for="@Model.SliderStatus" placeholder="status">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>