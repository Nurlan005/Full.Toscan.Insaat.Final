@using Toscan_Insaat_Final.Models;
@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}


<table class="table">
    <button type="button" class="btn btn-warning" asp-action="Update" asp-controller="Slider"><a asp-action="Create" asp-controller="Slider">Create</a></button>

    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Slider slider in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td style="width: 15%;">@slider.Title</td>
                <td style="width: 15%;">@slider.Status</td>
                <td style="width:50%"><img style="width:20%" src="~/images/sliders/@slider.SlideImageUrl" /></td>
                <td style="width: 15%;">
                    <button type="button" class="btn btn-warning"><a asp-route-id="@slider.Id" asp-action="Update" asp-controller="Slider">Update</a></button>
                    <button type="button" class="btn btn-danger"><a asp-route-id="@slider.Id" asp-action="Delete" asp-controller="Slider">Delete</a></button>
                </td>

            </tr>
        }
    </tbody>
</table>